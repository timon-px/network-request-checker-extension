{
  "name": "network-requests-checker",
  "displayName": "Network requests checker",
  "version": "0.0.1",
  "description": "Checks for external network requests made by the active tab.",
  "author": "TimonPX",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.11.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "webNavigation",
      "webRequest",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "*://*/*"
    ]
  }
}
